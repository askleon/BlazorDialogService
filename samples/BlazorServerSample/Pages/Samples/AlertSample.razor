@inject DialogService DialogService

<SampleHelper DialogResult="result" ShowDialog="Show" ButtonText="Alert dialog"></SampleHelper>

@code {
    DialogResult result;
    
async void Show()
{
    result = await DialogService
        .BuildDialog<AlertDialog>()
        .AddParameter(x => x.Content, HelloWorld)
        .AddParameter(x => x.Title, "A message to the world.")
        .ShowDialog();

    StateHasChanged();
}

    RenderFragment HelloWorld => new RenderFragment(x =>
    {
        x.OpenComponent(0, typeof(HelloWorldComponent));
        x.CloseComponent();
    });
}